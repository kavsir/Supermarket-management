@model Supermarket_management.Models.SanPham
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var danhMucs = ViewBag.DanhMucs as SelectList;
}

<h2>Sửa sản phẩm</h2>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="MaSp" />
    <input type="hidden" asp-for="HinhAnh" />

    <div class="form-group">
        <label asp-for="TenSp"></label>
        <input asp-for="TenSp" class="form-control" />
        <span asp-validation-for="TenSp" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MoTa"></label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SoLuong"></label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GiaBan"></label>
        <input asp-for="GiaBan" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="GiaBan" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgayNhap"></label>
        <input asp-for="NgayNhap" type="date" class="form-control" />
        <span asp-validation-for="NgayNhap" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TrangThai"></label>
        <input asp-for="TrangThai" class="form-control" />
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ảnh hiện tại:</label><br />
        @if (!string.IsNullOrEmpty(Model.HinhAnh))
        {
            <img src="~/images/@Model.HinhAnh" width="150" />
            <br />
        }
        <label>Chọn ảnh mới (nếu muốn):</label>
        <input type="file" name="upload" class="form-control" />
    </div>

    <div class="form-group">
        <label>Danh mục</label>
        <select asp-for="MaDanhMuc" class="form-control" asp-items="danhMucs">
            <option value="">-- Chọn danh mục --</option>
        </select>
        <span asp-validation-for="MaDanhMuc" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
