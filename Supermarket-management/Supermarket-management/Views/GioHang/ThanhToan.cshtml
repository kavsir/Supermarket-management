@model Supermarket_management.Models.ChiTietGioHang

@{
    ViewData["Title"] = "Xác nhận thanh toán";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">Xác nhận thanh toán</h2>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="row g-3 align-items-center">
                <div class="col-md-3 text-center">
                    <img src="~/images/@(Model.MaSanPhamNavigation?.HinhAnh ?? "no-image.png")"
                         alt="@Model.MaSanPhamNavigation?.TenSp"
                         class="img-thumbnail"
                         style="width: 120px; height: 120px; object-fit: cover;" />
                </div>
                <div class="col-md-9">
                    <h5 class="card-title mb-2">@Model.MaSanPhamNavigation?.TenSp</h5>
                    <p><strong>Số lượng:</strong> @Model.SoLuong</p>
                    <p><strong>Đơn giá:</strong> @Model.MaSanPhamNavigation?.GiaBan?.ToString("N0") VNĐ</p>
                    <p>
                        <strong>Thành tiền:</strong>
                        @(((Model.MaSanPhamNavigation?.GiaBan ?? 0) * (Model.SoLuong ?? 0)).ToString("N0")) VNĐ
                    </p>
                </div>
            </div>

            <form asp-action="DatHang" asp-controller="GioHang" method="post" class="mt-4 d-flex justify-content-between">
                <input type="hidden" name="maChiTiet" value="@Model.MaChiTiet" />
                <a href="@Url.Action("Index", "GioHang")" class="btn btn-secondary">← Quay lại giỏ hàng</a>
                <button type="submit" class="btn btn-success">Xác nhận đặt hàng</button>
            </form>
        </div>
    </div>
</div>
