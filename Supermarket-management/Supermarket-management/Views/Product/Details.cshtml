@model Supermarket_management.Models.SanPham

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5 text-center">
            <img src="~/images/@(Model.HinhAnh ?? "no-image.png")" alt="@Model.TenSp" style="width:200px;height:200px;object-fit:cover;" />
        </div>
        <div class="col-md-7">
            <h3>@Model.TenSp</h3>
            <p><strong>Mã sản phẩm:</strong> @Model.MaSp</p>
            <p><strong>Mô tả:</strong> @Model.MoTa</p>
            <p><strong>Giá bán:</strong> <span class="text-primary fw-bold">@Model.GiaBan?.ToString("N0") VNĐ</span></p>
            <form asp-controller="GioHang" asp-action="AddToCart" method="post">
                <input type="hidden" name="maSp" value="@Model.MaSp" />
                <div class="mb-3">
                    <label for="soLuong" class="form-label">Số lượng:</label>
                    <input type="number" id="soLuong" name="soLuong" class="form-control" min="1" max="@Model.SoLuong" value="1" required />
                    <small class="text-muted">Còn lại: @Model.SoLuong</small>
                </div>
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }
                <button type="submit" class="btn btn-success mt-3">Thêm vào giỏ hàng</button>
            </form>
        </div>
    </div>
</div>
