@model Supermarket_management.Models.DanhMuc

@{
    ViewData["Title"] = "Thêm danh mục";
}

<h2>Thêm danh mục</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TenDanhMuc"></label>
        <input asp-for="TenDanhMuc" class="form-control" />
        <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Thoát</a>
</form>
