@model List<Supermarket_management.Models.DanhMuc>
@{
    ViewData["Title"] = "Quản lý theo danh mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý sản phẩm theo danh mục</h2>

<a asp-action="Create" asp-controller="Product" class="btn btn-success mb-3">Thêm sản phẩm</a>

@foreach (var danhMuc in Model)
{
    <h4 class="mt-4">Danh mục: @danhMuc.TenDanhMuc (@danhMuc.SanPhams?.Count() sản phẩm)</h4>

    @if (danhMuc.SanPhams != null && danhMuc.SanPhams.Any())
    {
        var stt = 1;
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>STT</th>
                    <th>Tên sản phẩm</th>
                    <th>Ảnh</th>
                    <th>Số lượng</th>
                    <th>Giá bán</th>
                    <th>Danh mục</th>
                    <th>Tác vụ</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in danhMuc.SanPhams)
                {
                    <tr>
                        <td>@stt</td>
                        <td>@item.TenSp</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.HinhAnh))
                            {
                                <img src="~/images/@item.HinhAnh" width="100" height="80" />
                            }
                            else
                            {
                                <span>Không có ảnh</span>
                            }
                        </td>
                        <td>@item.SoLuong</td>
                        <td>@item.GiaBan. đ</td>
                        <td>@danhMuc.TenDanhMuc</td>
                        <td>
                            <a asp-action="Edit" asp-controller="SanPham" asp-route-id="@item.MaSp" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Delete" asp-controller="SanPham" asp-route-id="@item.MaSp" class="btn btn-danger btn-sm"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?');">Xóa</a>
                        </td>
                    </tr>
                    stt++;
                }
            </tbody>
        </table>
    }
    else
    {
        <div>Không có sản phẩm nào trong danh mục này.</div>
    }
}
<div class="mt-4">
    <a href="/Admin/Index" class="btn btn-secondary">← Quay về trang quản lý</a>
</div>