@{
    ViewData["Title"] = "Trang Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-2 bg-light p-3">
            <h5>Tổng quan</h5>
            <ul class="nav flex-column">
                <li class="nav-item"><a class="nav-link" asp-controller="SanPham" asp-action="Index">Quản lý sản phẩm</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="DanhMuc" asp-action="Index">Danh mục sản phẩm</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="ThongKe" asp-action="Index">Báo cáo thống kê</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index">Quản lý User</a></li>
                <li class="nav-item"><a class="nav-link" asp-controller="DonHang" asp-action="Index">Đơn hàng</a></li>
            </ul>
        </div>

        <!-- Main content -->
        <div class="col-md-10">
            <h2>Chào mừng bạn đến trang Admin!</h2>
            <div class="row mt-4">
                <div class="col-md-3 mb-3">
                    <a class="btn btn-outline-primary w-100" asp-controller="Product" asp-action="IndexAdmin">Quản lý sản phẩm</a>
                </div>
                <div class="col-md-3 mb-3">
                    <a class="btn btn-outline-primary w-100" asp-controller="DanhMuc" asp-action="Index">Danh mục sản phẩm</a>
                </div>
                <div class="col-md-3 mb-3">
                    <a class="btn btn-outline-primary w-100" asp-controller="ThongKe" asp-action="Index">Báo cáo thống kê</a>
                </div>

                <div class="col-md-3 mb-3">
                    <a class="btn btn-outline-primary w-100" asp-controller="User" asp-action="Index">Quản lý User</a>
                </div>
                <div class="col-md-3 mb-3">
                    <a class="btn btn-outline-primary w-100" asp-controller="DonHang" asp-action="Index">Đơn hàng</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
